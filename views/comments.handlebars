
<div class="panel panel-primary">
			<div class="panel-heading ">
				<h3 class="panel-title text-warning pull-left">{{articles.title}}</h3>
				<div class="clearfix"></div>
			</div>
			<div class="panel-body" id="accordion">
                        <form method="POST" action="/articles/{{articles.id}}">
                              <div class="form-group">
                                    <label for="title">Comment Title:</label>
                                    <input type="text" class="form-control" id="title" required="true" name="title">
                              </div>
                              <div class="form-group">
                                    <label for="body">Comment:</label>
                                    <input type="text" class="form-control" id="body" required="true" name="body">
                              </div>
                              <div class="form-group">
                                    <label for="body">Current Comment:</label>
                                    <ul>
                                          <li>Title: {{articles.note.title}}</li>
                                          <li>Comment: {{articles.note.body}}</li>
                                    </ul>
                              </div>
                              <div class="modal-footer">

                              <button type="submit" class="btn btn-default" data-dismiss="modal">Add Note</button>
                              </div>
                        </form>
			</div>
</div>