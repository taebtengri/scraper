<div class="panel panel-primary">
			<div class="panel-heading ">
				<h3 class="panel-title text-warning pull-left">Article History</h3>
        <a href="/scrape" class="btn btn-success pull-right">Scrape for More</a>
        <a href="" class="btn btn-warning pull-right">Clear Table</a>
				<div class="clearfix"></div>
			</div>
			<div class="panel-body" id="accordion">
				<table id="myTable"class="table table-striped table-hover" >
					<tbody>
						<!-- articles table goes here -->

                        {{#each allArticles}}
                        <tr>    
                            <td><a href="{{this.link}}" target="_blank" class="form-control">{{this.title}}</a></td>
                            <td>
                                <form method="POST" action="/save/{{this.id}}">
                                    <input type="hidden">
                                    <button class="btn btn-default" type="submit">Save 
                                    </button>
                                </form>
                            </td>
                        </tr>
                         {{/each}}

						<!-- /quotes table goes here -->
					</tbody>
				</table>
			</div>
</div>