
<div class="panel panel-primary">
			<div class="panel-heading ">
				<h3 class="panel-title text-warning pull-left">Saved Articles</h3>
				<div class="clearfix"></div>
			</div>
			<div class="panel-body" id="accordion">
				<table id="myTable"class="table table-striped table-hover" >
					<tbody>

                        {{#each allArticles}}
                        <tr>    
                            <td><a href="{{this.link}}" target="_blank" class="form-control" id="articleTitle">{{this.title}}</a></td>
                            <td>
                                <form method="POST" action="/delete/{{this.id}}?_method=PUT">
                                    <input type="hidden">
                                    <button class="btn btn-default" type="submit">Delete Article 
                                    </button>
                                </form>
                            </td>
                            <td>
                                <form method="GET" action="/articles/{{this.id}}">
                                    <input type="hidden">
                                    <button class="btn btn-default" type="submit">Comment
                                    </button>
                                </form>
                            </td>
                        </tr>
                         {{/each}}


					</tbody>
				</table>
			</div>
</div>